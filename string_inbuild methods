import java.util.Scanner;
import java.util.*;
public class Constructor {
    
    public static void main(String args[])
    {
        String str ="Akila   ";
        String str1="Aliaa";
            
        System.out.println("iF the first letter correct or not:"+str.startsWith("a"));
        System.out.println("Check the given letter correct or not:"+str.endsWith("a"));

        System.out.println("Concatenation two strings:"+str.concat(str1));
        System.out.println("Check the string equal or not:"+str.equals(str1));
        System.out.println("Reduce the space sing trim():"+str.trim());
        System.out.println("Replace string:"+str.replace('a','b'));
        System.out.println("Finding the length:"+str.length());
        System.out.println("Finding index value:"+str.indexOf('l'));
        System.out.println("Compares two strings lexicographically:"+str.compareTo(str1));
        System.out.println("Returns the unicode of the character at the specified index:"+str.codePointAt(1));
        System.out.println("Returns the Unicode of the character before the specified index:"+str.codePointBefore(3));
        System.out.println("Returns the number of unicode values found in a string:"+str.codePointCount(1,5));
        System.out.println("Returns the Character at the specified index:"+ str.charAt(2));

        System.out.println("Uppercase:"+str.toUpperCase());
         System.out.println("The Lowercase:"+str.toLowerCase());
